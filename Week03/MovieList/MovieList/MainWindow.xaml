<Window x:Class="MovieList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieList"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10,10,10,10" Orientation="Vertical">
            <TextBlock>Title</TextBlock>
            <TextBox Name="titleInput" Margin="0,0,0,15" Text="Ant Man"></TextBox>
            <TextBlock>Release Year</TextBlock>
            <TextBox Name="releaseYearInput" Margin="0,0,0,15" Text="2015"></TextBox>
            <Button Margin="0,0,0,10" HorizontalAlignment="Center" Click="AddButton_Click">Add Movie</Button>
            <Button Margin="0,0,0,10" HorizontalAlignment="Center" Click="ShowButton_Click">Show All Movies</Button>
            
        </StackPanel>
    </Grid>
</Window>
